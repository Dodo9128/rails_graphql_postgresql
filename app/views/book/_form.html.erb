<%= form_with do |form| %>

 <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :publication_date %>
    <%= form.select :publication_date, (Time.zone.now.year - 100)..(Time.zone.now.year + 1)  %>
  </div>
  
  <div class="field">
    <%= form.label :genre %>
    <%= select_tag('genre',options_for_select((['Horror', 'Thriller', 'Harry_Potter', 'Comedy', 'Romance', 'Programming']), class:'Genre', selected: 'Horror'))%>
  </div>

  <div class="field">
    <%= form.hidden_field :author_id, value: [params["id"]] %>
  </div>

  <div class="actions">
    <%= form.submit %>
    </div>
<% end %>