<h1><%= "#{@user.first_name} #{@user.last_name} 's Books" %></h1>

<table>
  <thead>
    <tr>
      <th>Book Name</th>
      <th>Genre</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |books| %>
      <tr>
        <td><%= books.title %></td>
        <td><%= books.genre %></td>
        <td><%= link_to "change info", "/book/info/#{@user.id}/#{books.id}", method: 'get' %></td>
        <td><%= link_to "delete", "/book/delete/#{@user.id}/#{books.id}", method: 'patch' %></td>
      </tr>
    <% end %>
  </tbody>
  <td><%=link_to "Add New Book", "/book/new/#{@user.id}" %></td>
</table>
